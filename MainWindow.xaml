<Window x:Class="ProfessorScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Professor Scheduler - Login"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#70B2B2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#016B61"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#016B61"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#70B2B2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#016B61"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#016B61"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LoginButton" TargetType="Button">
            <Setter Property="Background" Value="#016B61"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#70B2B2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#9ECFD4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Split screen design -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>

        <!-- Left panel - Branding -->
        <Border Grid.Column="0" Background="#016B61">
            <StackPanel VerticalAlignment="Center" Margin="40">
                <TextBlock Text="Professor Scheduler"
                          FontSize="32"
                          FontWeight="Bold"
                          Foreground="White"
                          TextWrapping="Wrap"
                          Margin="0,0,0,20"/>
                <TextBlock Text="Manage your academic schedule efficiently"
                          FontSize="16"
                          Foreground="#E5E9C5"
                          TextWrapping="Wrap"
                          LineHeight="24"/>
            </StackPanel>
        </Border>

        <!-- Right panel - Login form -->
        <Border Grid.Column="1" Background="#E5E9C5">
            <StackPanel VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Width="350">

                <!-- Welcome header -->
                <TextBlock Text="Welcome Back"
                          FontSize="28"
                          FontWeight="Bold"
                          Foreground="#016B61"
                          Margin="0,0,0,10"/>
                <TextBlock Text="Please login to your account"
                          FontSize="14"
                          Foreground="#70B2B2"
                          Margin="0,0,0,40"/>

                <!-- Email field -->
                <TextBlock Text="Email"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Foreground="#016B61"
                          Margin="0,0,0,8"/>
                <TextBox x:Name="EmailTextBox"
                        Style="{StaticResource ModernTextBox}"
                        Margin="0,0,0,25"/>

                <!-- Password field -->
                <TextBlock Text="Password"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Foreground="#016B61"
                          Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordBox"
                            Style="{StaticResource ModernPasswordBox}"
                            Margin="0,0,0,15"/>

                <!-- Forgot password link -->
                <TextBlock Text="Forgot password?"
                          FontSize="12"
                          Foreground="#70B2B2"
                          TextDecorations="Underline"
                          Cursor="Hand"
                          HorizontalAlignment="Right"
                          Margin="0,0,0,30"/>

                <!-- Login button -->
                <Button Content="Login"
                       Style="{StaticResource LoginButton}"
                       Click="LoginButton_Click"
                       Margin="0,0,0,20"/>

                <!-- Sign up link -->
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center">
                    <TextBlock Text="Don't have an account? "
                              FontSize="12"
                              Foreground="#70B2B2"/>
                    <TextBlock Text="Sign up"
                              FontSize="12"
                              Foreground="#016B61"
                              FontWeight="SemiBold"
                              TextDecorations="Underline"
                              Cursor="Hand"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>

